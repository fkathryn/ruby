<h6>Add new post</h6>
<%= form_for :post, url: posts_path do |f| %>
    <p>
        Title<br>
        <%= f.text_field(:title, {:class => 'form-control'}) %>
    </p>
    <p>
        Text<br>
        <%= f.text_area(:body, {:class => 'form-control'}) %>
    </p>
    <p>
        <%= f.submit({:class => 'btn btn-success'}) %>
    </p>
<% end %>